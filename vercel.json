{
  "version": 2,

  "builds": [
    {
      "src": "src/api/routes/*.js",
      "use": "@vercel/node"
    }
  ],

  "routes": [
    {
      "src": "/api/register",
      "dest": "src/api/routes/register.js"
    },
    {
      "src": "/api/verify-pin",
      "dest": "src/api/routes/verify-pin.js"
    },
    {
      "src": "/api/webhook",
      "dest": "src/api/routes/webhook.js"
    },

    {
      "src": "/(.*)",
      "dest": "/webapp/$1"
    }
  ]
}
